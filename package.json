{
    "name": "chatgpt-to-md",
    "description": "Exports conversations with ChatGPT to a JSON file containing Markdown blocks",
    "version": "0.0.1",
    "homepage": "http://chrome.google.com/webstore",
    "author": "Derek Doyle",
    "repository": {
        "type": "git",
        "url": "https://github.com/dddoyle1/chatgpt-to-md"
    },
    "scripts": {
        "start": "xt-build -e dev -w",
        "start:firefox": "xt-build -e dev -p firefox -w",
        "build": "xt-build -e prod",
        "build:firefox": "xt-build -e prod -p firefox",
        "clean": "xt-clean",
        "docs": "xt-docs",
        "test": "xt-test",
        "coverage": "nyc --reporter=lcov npm run test",
        "sync": "xt-sync"
    },
    "babel": {
        "presets": [
            "@babel/preset-env"
        ]
    },
    "eslintIgnore": [
        "test/**/*"
    ],
    "devDependencies": {
        "extension-cli": "latest"
    },
    "xtdocs": {
        "source": {
            "include": [
                "README.md",
                "src"
            ]
        }
    },
    "xtbuild": {
        "source": "src",
        "js": "./src/parser.js",
        "js_bundles": [
            {
                "name": "background",
                "src": "./src/background.js"
            },
            {
                "name": "app",
                "src": "./src/parser.js"
            }
        ]
    },
    "xtstart": {
        "js": "./src/parser.js"
    },
    "dependencies": {
        "sanitize-filename": "^1.6.3",
        "yaml": "^2.2.2"
    }
}
